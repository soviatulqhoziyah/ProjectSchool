<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahSekolahActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/kuning"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Tambah Sekolah"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/orange2"
                android:visibility="gone"
                android:id="@+id/progressBar"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Sekolah"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/etSekolah"
                android:background="@drawable/bg_edit_text"
                android:hint="Soviatul Qhoziyah"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/ic_judul"
                android:drawableTint="#051C9B"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/etInformasi"
                android:hint="Informasi Sekolah"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:drawablePadding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gambar"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Gambar"
                android:id="@+id/btnGambar"
                android:backgroundTint="#15346A"
                android:layout_marginTop="15dp"
                />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imgGambar"
                android:src="@drawable/file"
                android:layout_gravity="center"
                android:background="@color/black"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/etNotlpn"
                android:background="@drawable/bg_edit_text"
                android:hint="+62"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/ic_judul"
                android:drawableTint="#051C9B"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akreditasi"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/etAkreditasi"
                android:background="@drawable/bg_edit_text"
                android:hint="****"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/ic_judul"
                android:drawableTint="#051C9B"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah"
                android:id="@+id/btnTambah"
                android:layout_marginTop="15dp"
                android:backgroundTint="#15346A"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>