<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgSekolah"
            android:src="@drawable/file"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSekolah"
            android:layout_toEndOf="@+id/imgSekolah"
            android:layout_marginStart="10dp"
            android:textSize="24sp"
            android:text="Nama Sekolah"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNoTelpon"
            android:layout_toEndOf="@+id/imgSekolah"
            android:layout_below="@id/tvSekolah"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:text="+62"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAkreditasi"
            android:layout_toEndOf="@+id/imgSekolah"
            android:layout_below="@id/tvNoTelpon"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:text="Akreditasi"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>